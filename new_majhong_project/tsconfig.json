{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["assets/core/*"],
      "@shared/*": ["assets/shared/*"],
      "@domain/*": ["assets/domain/*"],
      "@features/*": ["assets/features/*"]
    }
  },
  "include": ["assets/**/*"],
  "exclude": ["node_modules"]
}

